{
  "name": "ts-minecraft",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "vite --config vite.config.dev.ts",
    "dev:main": "vite",
    "build": "tsc && vite build",
    "build:dev": "NODE_ENV=development vite build --config vite.config.dev.ts",
    "build:production": "NODE_ENV=production vite build --config vite.config.prod.ts",
    "build:workers": "NODE_ENV=production vite build --config vite.worker.config.ts",
    "build:full": "pnpm run build:production && pnpm run build:workers",
    "build:preview": "NODE_ENV=preview vite build",
    "tsc": "tsc --pretty",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run --reporter=verbose --reporter=json --reporter=junit --outputFile.json=./test-results.json --outputFile.junit=./test-results.xml",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "lint": "oxlint --deny-warnings --allow no-restricted-globals",
    "lint:fix": "oxlint --fix",
    "format": "prettier --write . --ignore-path .gitignore && oxlint --fix",
    "format:check": "prettier --check . --ignore-path .gitignore",
    "generate:atlas": "npx tsx scripts/generate-texture-atlas.ts",
    "clear-cache": "vitest clear",
    "analyze:bundle": "pnpm run build:production && node scripts/build-analysis.js",
    "analyze:bundle:dev": "pnpm run build:dev && node scripts/build-analysis.js",
    "analyze:deps": "madge --circular --extensions ts,tsx src/",
    "analyze:size": "node scripts/build-analysis.js",
    "security:audit": "pnpm audit --audit-level moderate",
    "performance:test": "node scripts/performance-test.js",
    "benchmark:build": "hyperfine 'pnpm run build:production' 'pnpm run build:dev' --warmup 1",
    "optimize:check": "pnpm run analyze:bundle && pnpm run analyze:deps",
    "ci:validate": "pnpm run lint && pnpm run tsc && pnpm run test:coverage",
    "ci:build": "pnpm run ci:validate && pnpm run build:full && pnpm run analyze:size"
  },
  "devDependencies": {
    "@effect/test": "^0.1.0",
    "@effect/vitest": "^0.25.1",
    "@types/file-saver": "^2.0.7",
    "@types/stats.js": "^0.17.4",
    "@types/three": "^0.179.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "canvas": "^3.2.0",
    "happy-dom": "^18.0.1",
    "madge": "^8.0.0",
    "oxlint": "^1.14.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@effect/platform": "^0.90.8",
    "@effect/schema": "^0.75.5",
    "alea": "^1.0.1",
    "effect": "^3.17.13",
    "gl-matrix": "^3.4.4",
    "simplex-noise": "^4.0.3",
    "stats.js": "^0.17.0",
    "three": "^0.179.1",
    "uuid": "^11.1.0"
  }
}
