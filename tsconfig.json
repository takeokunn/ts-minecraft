{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["jest"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@src/*": ["./src/*"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
